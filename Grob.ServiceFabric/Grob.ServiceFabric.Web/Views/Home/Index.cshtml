@model Grob.ServiceFabric.Web.Models.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h2>Agents</h2>
<div>
    <table class="striped centered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Uri</th>
                <th>CPU</th>
                <th>Available Memory</th>
                <th>Docker Engine</th>
                <th>Docker for Windows</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Grob.Agent.Models.GrobAgent agent in Model.GrobAgents)
            {
                <tr>
                    <th>@Html.DisplayFor(m => agent.Name)</th>
                    <th>@Html.DisplayFor(m => agent.Uri)</th>
                    <th>@Html.DisplayFor(m => agent.Information.CpuUsage)%</th>
                    <th>@Html.DisplayFor(m => agent.Information.AvailableMemory) MB</th>
                    @if (agent.Information.IsDockerEngineRunning)
                    {
                        <th><i class="small material-icons">check</i></th>
                    }
                    else
                    {
                        <th><i class="small material-icons">close</i></th>
                    }
                    @if (agent.Information.IsDockerForWindowsServiceRunning)
                    {
                        <th><i class="small material-icons">check</i></th>
                    }
                    else
                    {
                        <th><i class="small material-icons">close</i></th>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>